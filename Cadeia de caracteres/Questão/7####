def conjugar():
    verbo = str(input("Escreva um verbo:")).upper()
    numero =len(verbo)
    parte= ""
    nova_palavra = ""
    primeira_parte = nova_palavra(verbo)
    for letra in verbo[numero-2] + verbo[numero-1]:
        parte = parte+letra
        if parte == "ER":
            print("EU "+ primeira_parte+ "O \n"
                  "TU "+ primeira_parte+ "ES \n"
                  "ELE "+primeira_parte+ "E \n"
                  "NOS "+primeira_parte+ "EMOS \n"
                  "VOS "+primeira_parte+ "EIS \n"
                  "ELES "+primeira_parte+ "EM \n")
    print(parte)
def nova_palavra(verbo,numero):
    for letra in verbo[0,numero-2]:
        nova_palavra = nova_palavra + letra
        return nova_palavra
    print(nova_palavra)

conjugar()

          
