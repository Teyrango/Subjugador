#Leia 3 números, calcule e escreva a soma dos 2 primeiros
#e a diferença entre os 2 últimos.

def soma_diferenca():
    a = 0
    soma = 0
    diferenca = 0
    while a<=2:
        numero = int(input("Digite um numero: "))
        if a == 0 or a == 1 :
            soma = soma + numero
        if a == 1 or a == 2:
            diferenca = numero - diferenca 
        a = a + 1


    print("A soma eh: ",soma)
    print("A diferenca eh: ", diferenca)
soma_diferenca()
